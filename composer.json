{
    "name": "mikelooper/ddd-cqrs",
    "type": "library",
    "description": "A template to create libraries",
    "keywords": ["library"],
    "homepage": "https://github.com/mikel00per/php-ddd-cqrs",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Shared\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shared\\Tests\\": "tests/"
        },
        "classmap": [
            "src/"
        ]
    },
    "authors": [
        {
            "name": "Miguel Morillo",
            "email": "miguelmwilliams@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "lambdish/phunctional": "^2.1",
        "mikelooper/value-objects": "^0.0.3",
        "symfony/messenger": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4.0",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.15"
    },
    "scripts": {
        "test": [
            "@analyze",
            "@test:unit"
        ],
        "lint:fix": "phpcbf",
        "test:unit":  "phpunit --configuration phpunit.xml --no-coverage",
        "test:coverage": "phpunit --configuration phpunit.xml --coverage-html tmp/coverage",
        "analyze": [
            "@psalm",
            "@lint"
        ],
        "psalm": "psalm --no-cache",
        "lint": "phpcs --no-cache"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
